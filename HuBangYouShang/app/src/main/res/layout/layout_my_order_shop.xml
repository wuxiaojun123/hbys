<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="91dp"
    android:orientation="horizontal"
    android:layout_gravity="center_vertical"
    >

    <ImageView
        android:id="@+id/iv_shop_img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_shop_name"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:text="商品名称商品名称商品名称商品名称商品名称商品名称商品名称商品名称"
            android:textColor="@color/color_3a"
            android:textSize="@dimen/dimen_13" />

        <TextView
            android:id="@+id/tv_shop_atrribute"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="商品属性:"
            android:textColor="@color/color_bf"
            android:textSize="@dimen/dimen_13" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_single_shop_price"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="right|center_vertical"
            android:text="￥200"
            android:textColor="@color/color_fa"
            android:textSize="@dimen/dimen_13" />

        <TextView
            android:id="@+id/tv_shop_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            android:maxLines="2"
            android:text="x1"
            android:textColor="@color/color_bf"
            android:textSize="@dimen/dimen_13" />

    </LinearLayout>

</LinearLayout>