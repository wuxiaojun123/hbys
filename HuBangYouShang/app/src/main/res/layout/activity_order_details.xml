<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <include
        android:id="@+id/id_layout_title"
        layout="@layout/layout_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/id_layout_title"
        android:layout_marginBottom="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@drawable/shape_divider_line"
            android:orientation="vertical"
            android:showDividers="middle"
            >

            <LinearLayout
                android:id="@+id/ll_order_info"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp">

                    <TextView
                        android:id="@+id/tv_order_number"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="订单号:"
                        android:textColor="@color/color_3a"
                        android:textSize="@dimen/dimen_14" />

                    <TextView
                        android:id="@+id/tv_order_state"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        android:textColor="@color/color_f6b258" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_order_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="下单时间："
                    android:textColor="@color/color_bf"
                    android:textSize="@dimen/dimen_14" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/tv_express"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:text="某某快递:快递单号"
                    android:textColor="@color/color_3a"
                    android:textSize="@dimen/dimen_14" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_line"
                    android:background="@drawable/shape_divider_line" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp">

                    <TextView
                        android:id="@+id/tv_receiver_person"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="收货人:"
                        android:textColor="@color/color_3a"
                        android:textSize="@dimen/dimen_13" />

                    <TextView
                        android:id="@+id/tv_receiver_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        android:text="15911047043"
                        android:textColor="@color/color_3a"
                        android:textSize="@dimen/dimen_13" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_receiver_address"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="收货地址:北京市丰台区某某小区某某栋某某单元某某号哈哈哈哈哈hehehehhe"
                    android:textColor="@color/color_3a"
                    android:textSize="@dimen/dimen_12" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp">

                    <TextView
                        android:id="@+id/tv_seller_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:drawablePadding="10dp"
                        android:drawableRight="@mipmap/img_goods_detail_allow_right"
                        android:gravity="center_vertical"
                        android:text="商家名称"
                        android:textColor="@color/color_3a"
                        android:textSize="@dimen/dimen_14" />

                    <TextView
                        android:id="@+id/tv_complaint"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:drawableLeft="@mipmap/img_phone_call_complaints"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:text="投诉"
                        android:textColor="@color/color_bf"
                        android:textSize="@dimen/dimen_12" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_shop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/shape_divider_line"
                    android:dividerPadding="5dp"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:showDividers="middle">

                    <!--<include layout="@layout/layout_my_order_shop" />
                    <include layout="@layout/layout_my_order_shop" />
                    <include layout="@layout/layout_my_order_shop" />-->

                </LinearLayout>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:drawablePadding="10dp"
                        android:drawableRight="@mipmap/img_goods_detail_allow_right"
                        android:gravity="center_vertical"
                        android:text="支付方式"
                        android:textColor="@color/color_3a"
                        android:textSize="@dimen/dimen_14" />

                    <TextView
                        android:id="@+id/tv_pay_way"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        android:text="某某支付"
                        android:textColor="@color/color_bf"
                        android:textSize="@dimen/dimen_12" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_line"
                    android:background="@drawable/shape_divider_line" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="商品总价"
                        android:textColor="@color/color_bf"
                        android:textSize="@dimen/dimen_14" />

                    <TextView
                        android:id="@+id/tv_shop_total_price"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        android:text="234"
                        android:textColor="@color/color_bf"
                        android:textSize="@dimen/dimen_14" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="运费"
                        android:textColor="@color/color_bf"
                        android:textSize="@dimen/dimen_14" />

                    <TextView
                        android:id="@+id/tv_free"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        android:text="1"
                        android:textColor="@color/color_bf"
                        android:textSize="@dimen/dimen_14" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="通用卷折扣"
                        android:textColor="@color/color_bf"
                        android:textSize="@dimen/dimen_14" />

                    <TextView
                        android:id="@+id/tv_discount"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        android:text="1"
                        android:textColor="@color/color_bf"
                        android:textSize="@dimen/dimen_14" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="优惠劵满减"
                        android:textColor="@color/color_bf"
                        android:textSize="@dimen/dimen_14" />

                    <TextView
                        android:id="@+id/tv_full_cut"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        android:textColor="@color/color_bf"
                        android:textSize="@dimen/dimen_14" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="实付款"
                        android:textColor="@color/color_3a"
                        android:textSize="@dimen/dimen_14" />

                    <TextView
                        android:id="@+id/tv_real_price"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        android:textColor="@color/color_fa"
                        android:textSize="@dimen/dimen_14" />

                </RelativeLayout>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <TextView
                android:id="@+id/tv_contact_seller"
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:drawableLeft="@mipmap/img_goods_detail_chat"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:paddingLeft="100dp"
                android:paddingRight="100dp"
                android:text="联系卖家"
                android:textColor="@color/color_bf"
                android:textSize="@dimen/dimen_14" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

        </LinearLayout>

    </ScrollView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/shape_divider_line"
            android:layout_alignParentTop="true"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="right"
            android:orientation="horizontal"
            android:paddingRight="10dp"
            >

            <TextView
                android:id="@+id/tv_cancel_order"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/shape_bg_prepaid_balance_tv"
                android:gravity="center"
                android:text="取消订单"
                android:textColor="@color/color_3a"
                android:textSize="@dimen/dimen_13" />

            <TextView
                android:id="@+id/tv_remove_order"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape_bg_prepaid_balance_tv"
                android:gravity="center"
                android:text="删除订单"
                android:textColor="@color/color_3a"
                android:textSize="@dimen/dimen_13" />

            <TextView
                android:id="@+id/tv_evaluate_order"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/shape_bg_order_evaluate"
                android:gravity="center"
                android:text="评价"
                android:textColor="@color/color_next_bg"
                android:textSize="@dimen/dimen_13" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>

