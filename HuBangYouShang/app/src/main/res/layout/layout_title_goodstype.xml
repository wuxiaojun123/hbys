<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_44"
    android:background="@color/color_title_background">


    <TextView
        android:id="@+id/tv_title_right"
        android:layout_width="@dimen/dimen_50"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/color_while"
        android:textSize="@dimen/dimen_16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="8dp"
        android:layout_toLeftOf="@+id/tv_title_right"
        android:background="@drawable/shape_search_background">

        <TextView
            android:id="@+id/tv_title_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:drawableRight="@mipmap/menu_symbol"
            android:text="商品"
            android:textColor="@color/color_while"
            android:textSize="13sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/color_while" />

        <EditText
            android:id="@+id/et_shop_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#00000000"
            android:drawableLeft="@mipmap/img_search"
            android:drawablePadding="6dp"
            android:hint="搜索关键字相关商品"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:textColor="@color/color_while"
            android:textColorHint="@color/color_while"
            android:textSize="@dimen/dimen_13" />

        <ImageView
            android:id="@+id/iv_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:visibility="invisible"
            android:layout_weight="0"
            android:src="@mipmap/img_search_close" />
    </LinearLayout>
</RelativeLayout>