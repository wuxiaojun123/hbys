<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/color_while"
        android:paddingBottom="@dimen/layout_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/layout_margin">

        <ImageView
            android:id="@+id/iv_helpinfo_headimg"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/tv_helpinfo_uname"
            style="@style/style_text_lable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_margin"
            android:layout_toRightOf="@id/iv_helpinfo_headimg"
            android:text="哈哈哈哈" />

        <TextView
            android:id="@+id/tv_helpinfo_date"
            style="@style/style_text_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/layout_margin"
            android:layout_toRightOf="@id/iv_helpinfo_headimg"
            android:text="2017-02-19 16:09" />

        <TextView
            android:id="@+id/tv_helpinfo_count"
            style="@style/style_text_content_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="跟帖 0" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_spiline" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_margin"
        android:background="@drawable/bg_msgcenter_item"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/tv_helpinfo_title"
            style="@style/style_text_lable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/layout_margin"
            android:layout_marginTop="@dimen/layout_margin"
            android:text="这里是标题，这里是标题这里是标题这里是标题這是标题" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_spiline" />

        <TextView
            android:id="@+id/tv_helpinfo_content"
            style="@style/style_text_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/layout_margin"
            android:layout_marginTop="@dimen/layout_margin"
            android:maxLines="5"
            android:text="这里是内容" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_image1"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginBottom="@dimen/layout_margin"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_image2"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginBottom="@dimen/layout_margin"
                android:layout_marginLeft="5dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_image3"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginBottom="@dimen/layout_margin"
                android:layout_marginLeft="5dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_image4"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginBottom="@dimen/layout_margin"
                android:layout_marginLeft="5dp"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_showAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/layout_margin"
            android:text="全文"
            android:textColor="#8fb7f5"
            android:textSize="@dimen/dimen_12" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/color_spiline" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_while"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/iv_reward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:src="@mipmap/reward" />

        <TextView
            android:id="@+id/tv_reward_num"
            style="@style/style_text_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="0人赞赏" />

        <HorizontalScrollView
            android:id="@+id/hs_collect_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:scrollbars="none"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/collect_layout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"></LinearLayout>
        </HorizontalScrollView>

        <HorizontalScrollView
            android:id="@+id/hs_collect_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:scrollbars="none"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/collect_layout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"></LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_spiline" />
</LinearLayout>