<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:divider="@drawable/shape_divider_line"
    android:orientation="vertical"
    android:showDividers="middle|end">

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <LinearLayout style="@style/style_certification_linearlayout">

        <TextView
            style="@style/style_certification_text_title"
            android:text="真事姓名" />

        <EditText
            android:id="@+id/et_name"
            style="@style/style_certification_edit"
            android:hint="请输入真实姓名" />

    </LinearLayout>

    <LinearLayout style="@style/style_certification_linearlayout">

        <TextView
            style="@style/style_certification_text_title"
            android:text="身份证号" />

        <EditText
            android:id="@+id/et_card"
            style="@style/style_certification_edit"
            android:hint="请输入身份证号"
            android:maxLength="18" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@color/colorPrimary"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_upload"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:src="@mipmap/img_add_certification" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="手持身份证照"
                android:textColor="@color/color_3a"
                android:textSize="@dimen/dimen_15" />

            <TextView
                android:id="@+id/tv_upload"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:drawableLeft="@mipmap/img_certification_pass"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="请上传您本人手持身份证正面照"
                android:textColor="@color/color_bf"
                android:textSize="@dimen/dimen_15" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>