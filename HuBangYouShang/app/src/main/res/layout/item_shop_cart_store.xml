<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_allbg"
    android:paddingTop="@dimen/dimen_10">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/color_while">

    <ImageView
        android:id="@+id/iv_store_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/img_address_checkbox"
        android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/tv_store_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawablePadding="10dp"
            android:layout_marginLeft="@dimen/dimen_10"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="这里是商家名称"
            android:textColor="@color/color_3a"
            android:textSize="@dimen/dimen_15" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/shape_divider_line"></ImageView>
</LinearLayout>