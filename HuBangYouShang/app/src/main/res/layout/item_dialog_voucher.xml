<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include layout="@layout/layout_dialog_voucher_suspension" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:divider="@drawable/shape_divider_line"
        android:showDividers="end">

        <LinearLayout
            android:id="@+id/ll_left_content"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@color/color_fa"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/color_while"
                android:textSize="@dimen/dimen_20" />

            <TextView
                android:id="@+id/tv_price_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="满0元可用"
                android:textColor="@color/color_while"
                android:textSize="@dimen/dimen_13" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_content"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="40dp"
            android:layout_toRightOf="@id/ll_left_content"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/tv_store_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:text="商家店名"
                android:textColor="@color/color_3a"
                android:textSize="@dimen/dimen_15" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:text="优惠时间"
                android:textColor="@color/color_bf"
                android:textSize="@dimen/dimen_13" />

            <TextView
                android:id="@+id/tv_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="状态"
                android:textColor="@color/color_fa"
                android:textSize="@dimen/dimen_13"
                android:visibility="gone" />

        </LinearLayout>

        <CheckBox
            android:id="@+id/id_cb_use_voucher"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:background="@null"
            android:button="@drawable/selector_voucher_checkbox"
            android:gravity="center"
            android:paddingRight="10dp" />

    </RelativeLayout>


</LinearLayout>