<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    android:divider="@drawable/shape_divider_line"
    android:orientation="vertical"
    android:showDividers="end|beginning|middle">


    <LinearLayout
        android:id="@+id/ll_shop_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/tv_store_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/img_goods_detail_allow_right"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="这里是商家名称"
            android:textColor="@color/color_3a"
            android:textSize="@dimen/dimen_15" />

        <TextView
            android:id="@+id/tv_shop_state"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:text="商品状态"
            android:textColor="@color/color_ffb258"
            android:textSize="@dimen/dimen_12" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_shop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/shape_divider_line"
        android:dividerPadding="5dp"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:showDividers="middle">

        <!--<include layout="@layout/layout_my_order_shop" />
        <include layout="@layout/layout_my_order_shop" />
        <include layout="@layout/layout_my_order_shop" />-->

    </LinearLayout>

    <TextView
        android:id="@+id/tv_total_shop_and_money"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="right|center_vertical"
        android:paddingRight="10dp"
        android:text="共计：4件商品  合计：￥235元(含运费12元)"
        android:textColor="@color/color_3a"
        android:textSize="@dimen/dimen_13" />

    <LinearLayout
        android:id="@+id/ll_click"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="right"
        android:orientation="horizontal"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/tv_cancel_order"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape_bg_prepaid_balance_tv"
            android:gravity="center"
            android:text="取消订单"
            android:textColor="@color/color_3a"
            android:textSize="@dimen/dimen_13" />

        <TextView
            android:id="@+id/tv_remove_order"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape_bg_prepaid_balance_tv"
            android:gravity="center"
            android:text="删除订单"
            android:textColor="@color/color_3a"
            android:textSize="@dimen/dimen_13" />

        <TextView
            android:id="@+id/tv_evaluate_order"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/shape_bg_order_evaluate"
            android:gravity="center"
            android:text="评价"
            android:textColor="@color/color_next_bg"
            android:textSize="@dimen/dimen_13" />

    </LinearLayout>

</LinearLayout>