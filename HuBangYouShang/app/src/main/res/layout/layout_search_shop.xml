<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_44"
    android:background="@color/color_title_background"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_title_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:paddingLeft="10dp"
        android:scaleType="center"
        android:src="@mipmap/img_back"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="8dp"
        android:layout_weight="0.8"
        android:background="@drawable/shape_search_background"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/iv_search_type"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:drawableRight="@mipmap/img_shop_menu_symbol"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="3dp"
            android:text="商品"
            android:textColor="@color/color_while"
            android:textSize="@dimen/dimen_13" />

        <ImageView
            android:id="@+id/iv_search_line"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@mipmap/img_separative_sign" />

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:paddingLeft="2dp"
            android:paddingRight="4dp"
            android:src="@mipmap/img_search" />

        <com.help.reward.view.SearchEditTextView
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:hint="@string/string_search_hint"
            android:imeOptions="actionSearch"
            android:maxLines="1"
            android:inputType="text"
            android:selectAllOnFocus="true"
            android:textColor="@color/color_while"
            android:textColorHint="@color/color_while"
            android:textSize="@dimen/dimen_13" />

    </LinearLayout>

    <!--<EditText
        android:id="@+id/et_search"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="8dp"
        android:drawablePadding="6dp"
        android:background="@drawable/shape_search_background"
        android:drawableLeft="@mipmap/img_search"
        android:drawableRight="@mipmap/img_search_close"
        android:hint="@string/string_search_hint"
        android:textColor="@color/color_while"
        android:textSize="@dimen/dimen_13"
        android:textColorHint="@color/color_while"
        android:maxLines="1"
        />-->

    <ImageView
        android:id="@+id/iv_email"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="8dp"
        android:src="@mipmap/img_email"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_text"
        android:layout_width="35dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:text="取消"
        android:textColor="@color/color_while"
        android:textSize="@dimen/dimen_15" />

</LinearLayout>