<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_allbg"
    android:orientation="vertical">

    <include layout="@layout/layout_title_goodstype" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.base.recyclerview.LRecyclerView
            android:id="@+id/lv_types"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#f2f2f2"
            android:overScrollMode="never"
            android:scrollbars="none" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_spiline" />

        <ListView
            android:id="@+id/lv_secondtype"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_while"
            android:cacheColorHint="#00000000"
            android:divider="@color/color_spiline"
            android:dividerHeight="1dp"
            android:scrollbars="none" />

    </LinearLayout>


</LinearLayout>