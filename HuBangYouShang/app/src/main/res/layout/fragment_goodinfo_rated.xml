<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_while"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/layout_margin"
        android:layout_marginRight="@dimen/layout_margin">
        <TextView
            android:id="@+id/tv_evaluate_all"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1.0"
            android:background="@drawable/bg_pay_btn"
            android:gravity="center"
            style="@style/style_text_lable"
            android:text="全部评价"
            />
        <LinearLayout
            android:layout_width="@dimen/layout_margin"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_evaluate_good"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1.0"
            android:background="@drawable/bg_pay_btn"
            android:gravity="center"
            style="@style/style_text_lable"
            android:text="好评(9)"
            />
        <LinearLayout
            android:layout_width="@dimen/layout_margin"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_evaluate_middle"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1.0"
            android:background="@drawable/bg_pay_btn"
            android:gravity="center"
            style="@style/style_text_lable"
            android:text="中评(8)"
            />
        <LinearLayout
            android:layout_width="@dimen/layout_margin"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_evaluate_bad"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1.0"
            android:background="@drawable/bg_pay_btn"
            android:gravity="center"
            style="@style/style_text_lable"
            android:text="差评(9)"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_spiline"/>


    <com.base.recyclerview.LRecyclerView
        android:id="@+id/lv_shopinfo_rated"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>