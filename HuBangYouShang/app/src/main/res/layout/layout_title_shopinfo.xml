<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_44"
    android:background="@color/color_title_background">

    <ImageView
        android:id="@+id/iv_shopinfo_title_back"
        android:layout_width="@dimen/dimen_50"
        android:layout_height="match_parent"
        android:src="@mipmap/img_back"
        android:scaleType="center"
        android:layout_alignParentLeft="true"
        />

    <ImageView
        android:id="@+id/iv_shopinfo_title_type"
        android:layout_width="@dimen/dimen_50"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/iv_shopinfo_title_more"
        android:src="@mipmap/classification_store"
        android:scaleType="center"
        />
    <EditText
        android:id="@+id/et_shop_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:drawablePadding="6dp"
        android:background="@drawable/shape_search_background"
        android:drawableLeft="@mipmap/img_search"
        android:drawableRight="@mipmap/img_search_close"
        android:hint="@string/shop_lable11"
        android:textColor="@color/color_while"
        android:textSize="@dimen/dimen_13"
        android:textColorHint="@color/color_while"
        android:layout_toLeftOf="@+id/iv_shopinfo_title_type"
        android:layout_toRightOf="@+id/iv_shopinfo_title_back"
        />

    <ImageView
        android:id="@+id/iv_shopinfo_title_more"
        android:layout_width="@dimen/dimen_50"
        android:layout_height="match_parent"
        android:src="@mipmap/img_back"
        android:scaleType="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>