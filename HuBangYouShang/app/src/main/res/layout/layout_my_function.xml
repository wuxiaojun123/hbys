<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@drawable/shape_divider_line"
    android:orientation="vertical"
    android:showDividers="middle|beginning|end"
    android:layout_marginTop="20dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_payment"
            style="@style/style_my_function_text"
            android:drawableTop="@mipmap/img_my_payment"
            android:text="待付款" />

        <TextView
            android:id="@+id/tv_take_delivery"
            style="@style/style_my_function_text"
            android:drawableTop="@mipmap/img_my_take_delivery"
            android:text="待收货" />

        <TextView
            android:id="@+id/tv_evaluate"
            style="@style/style_my_function_text"
            android:drawableTop="@mipmap/img_my_evaluate"
            android:text="待评价" />

        <TextView
            android:id="@+id/tv_return_goods"
            style="@style/style_my_function_text"
            android:drawableTop="@mipmap/img_return_goods"
            android:text="退款/退货" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/color_black" />

        <TextView
            android:id="@+id/tv_order"
            style="@style/style_my_function_text"
            android:drawableTop="@mipmap/img_my_order"
            android:text="我的订单" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal">

        <LinearLayout style="@style/style_my_function_linear_layout">

            <TextView
                android:id="@+id/tv_available_predeposit"
                style="@style/style_my_function_quantity"
                android:text="0" />

            <TextView
                style="@style/style_my_function_quantity_title"
                android:text="余额" />

        </LinearLayout>

        <LinearLayout style="@style/style_my_function_linear_layout">

            <TextView
                android:id="@+id/tv_voucher"
                style="@style/style_my_function_quantity"
                android:text="0" />

            <TextView
                style="@style/style_my_function_quantity_title"
                android:text="优惠劵" />

        </LinearLayout>

        <LinearLayout style="@style/style_my_function_linear_layout">

            <TextView
                android:id="@+id/tv_general_voucher"
                style="@style/style_my_function_quantity"
                android:text="0" />

            <TextView
                style="@style/style_my_function_quantity_title"
                android:text="通用卷" />

        </LinearLayout>

        <LinearLayout style="@style/style_my_function_linear_layout">

            <TextView
                android:id="@+id/tv_discount_level"
                style="@style/style_my_function_quantity"
                android:text="0" />

            <TextView
                style="@style/style_my_function_quantity_title"
                android:text="优惠百分比" />

        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/color_black" />

        <TextView
            android:id="@+id/tv_account"
            style="@style/style_my_function_text"
            android:drawableTop="@mipmap/img_my_account"
            android:text="我的账户" />

    </LinearLayout>


</LinearLayout>