<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dimen_10"
    android:paddingRight="@dimen/dimen_10"
    android:paddingLeft="@dimen/dimen_10"
    android:background="@color/color_while">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_good_evaluate_photo"
            android:layout_width="@dimen/dimen_35"
            android:layout_height="@dimen/dimen_35"
            android:src="@drawable/ic_launcher"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:layout_toRightOf="@+id/iv_good_evaluate_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_good_evaluate_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="云淡风轻"
                android:textSize="@dimen/dimen_14"
                android:textColor="@color/color_3a"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_good_evaluate_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2016-10-10"
                    android:textSize="@dimen/dimen_14"
                    android:textColor="@color/color_8a"/>

            <TextView
                android:id="@+id/tv_good_evaluate_prop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10"
                android:text="尺码：S 颜色：黑色"
                android:textSize="@dimen/dimen_14"
                android:textColor="@color/color_8a"/>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_evaluate_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10"
        android:text="很好看，很漂亮！"
        android:textSize="@dimen/dimen_14"
        android:textColor="@color/color_3a"/>

    <LinearLayout
        android:id="@+id/ll_img_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_10"
        android:orientation="vertical">
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/shape_divider_line">
    </RelativeLayout>

</LinearLayout>