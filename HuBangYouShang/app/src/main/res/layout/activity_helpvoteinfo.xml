<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_allbg"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/layout_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="103dp">

                <TextView
                    android:id="@+id/tv_vs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="5dp"
                    android:text="VS"
                    android:textColor="@color/color_3a"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/tv_vs"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_icon1"
                        android:layout_width="39dp"
                        android:layout_height="39dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@mipmap/img_default" />

                    <TextView
                        android:id="@+id/tv_vote1"
                        style="@style/style_text_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="7dp"
                        android:text="23" />

                    <TextView
                        android:id="@+id/tv_name1"
                        style="@style/style_text_lable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:maxLength="10"
                        android:text="aaaa" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_vs"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_icon2"
                        android:layout_width="39dp"
                        android:layout_height="39dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@mipmap/img_default" />

                    <TextView
                        android:id="@+id/tv_vote2"
                        style="@style/style_text_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="7dp"
                        android:text="23" />

                    <TextView
                        android:id="@+id/tv_name2"
                        style="@style/style_text_lable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:maxLength="10"
                        android:text="aaaa" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_spiline" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_margin"
                android:background="@drawable/bg_msgcenter_item"
                android:orientation="vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <TextView
                    android:id="@+id/tv_helpinfo_title"
                    style="@style/style_text_lable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/layout_margin"
                    android:layout_marginTop="@dimen/layout_margin"
                    android:text="这里是标题，这里是标题这里是标题这里是标题這是标题" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_spiline" />

                <TextView
                    android:id="@+id/tv_helpinfo_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/layout_margin"
                    android:layout_marginTop="@dimen/content_margin"
                    android:text="这里是内容"
                    android:textColor="#aeb1bd"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_image1"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginBottom="@dimen/layout_margin"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_image2"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginBottom="@dimen/layout_margin"
                    android:layout_marginLeft="5dp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_image3"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginBottom="@dimen/layout_margin"
                    android:layout_marginLeft="5dp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_image4"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginBottom="@dimen/layout_margin"
                    android:layout_marginLeft="5dp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_margin"
                android:background="@drawable/bg_msgcenter_item"
                android:orientation="vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <TextView
                    style="@style/style_text_lable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_margin"
                    android:text="请选择您支持的一方" />

                <LinearLayout
                    android:id="@+id/layout_vote1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_margin"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/checkbox_vote1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/selector_address_checkbox" />

                    <TextView
                        android:id="@+id/tv_votename1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="5dp"
                        android:maxLength="10"
                        android:text="aaaa"
                        android:textColor="#aeb1bd"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_vote2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/layout_margin"
                    android:layout_marginTop="@dimen/layout_margin"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/checkbox_vote2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/selector_address_checkbox" />

                    <TextView
                        android:id="@+id/tv_votename2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:maxLength="10"
                        android:text="aaaa"
                        android:textColor="#aeb1bd"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_subvote"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/vote"
                android:gravity="center"
                android:text="投票"
                android:textColor="@color/color_while"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>