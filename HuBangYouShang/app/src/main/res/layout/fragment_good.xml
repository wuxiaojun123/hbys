<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_allbg"
        android:orientation="vertical">

        <com.bigkoo.convenientbanner.ConvenientBanner
            android:id="@+id/cb_goods_img"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:canLoop="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_while"
            android:padding="@dimen/layout_margin">

            <TextView
                android:id="@+id/tv_goodinfo_goodname"
                style="@style/style_text_lable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="商品名称" />

            <TextView
                android:id="@+id/tv_goodinfo_goodprice"
                style="@style/style_text_lable_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_goodinfo_goodname"
                android:layout_marginTop="@dimen/layout_margin"
                android:text="￥0" />

            <TextView
                android:id="@+id/tv_goodinfo_goodppost"
                style="@style/style_text_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tv_goodinfo_goodname"
                android:layout_marginTop="@dimen/layout_margin"
                android:text="包邮" />

            <TextView
                android:id="@+id/tv_goodinfo_alert1"
                style="@style/style_text_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_goodinfo_goodprice"
                android:layout_marginTop="@dimen/layout_margin"
                android:text="原价" />

            <TextView
                android:id="@+id/tv_goodinfo_oldprice"
                style="@style/style_text_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_goodinfo_goodprice"
                android:layout_marginLeft="@dimen/layout_margin"
                android:layout_marginTop="@dimen/layout_margin"
                android:layout_toRightOf="@+id/tv_goodinfo_alert1"
                android:text="￥0" />

            <TextView
                android:id="@+id/tv_goodinfo_salecount"
                style="@style/style_text_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_goodinfo_goodprice"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/layout_margin"
                android:text="0人付款" />

            <TextView
                android:id="@+id/tv_goodinfo_address"
                style="@style/style_text_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tv_goodinfo_goodprice"
                android:layout_marginTop="@dimen/layout_margin"
                android:text="地址" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_44"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/layout_margin"
            android:paddingRight="@dimen/layout_margin">

            <LinearLayout
                android:id="@+id/layout_goodinfo_tip1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="13dp"
                    android:src="@mipmap/zhengpin" />

                <TextView
                    style="@style/style_text_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/good_lable6" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_goodinfo_tip2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="13dp"
                    android:src="@mipmap/seven" />

                <TextView
                    style="@style/style_text_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/good_lable7" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_goodinfo_tip3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="13dp"
                    android:src="@mipmap/tui" />

                <TextView
                    style="@style/style_text_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/good_lable8" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/layout_margin"
            android:layout_marginRight="@dimen/layout_margin"
            android:background="@color/color_spiline" />

        <RelativeLayout
            android:id="@+id/layout_goodinfo_youhuiquan"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_44"
            android:paddingLeft="@dimen/layout_margin"
            android:paddingRight="@dimen/layout_margin">

            <ImageView
                android:id="@+id/iv_goodinfo_1"
                android:layout_width="15dp"
                android:layout_height="8dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/youhui" />

            <TextView
                style="@style/style_text_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_goodinfo_1"
                android:text="@string/good_lable9" />

            <ImageView
                android:layout_width="@dimen/width_arrow"
                android:layout_height="@dimen/hight_arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/img_disclosure_arrow" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_spiline" />

        <RelativeLayout
            android:id="@+id/layout_goodinfo_xuanze"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_44"
            android:layout_marginTop="@dimen/layout_margin"
            android:background="@drawable/bg_msgcenter_item"
            android:paddingLeft="@dimen/layout_margin"
            android:paddingRight="@dimen/layout_margin">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/width_arrow"
                android:layout_height="@dimen/hight_arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/img_disclosure_arrow" />

            <TextView
                android:id="@+id/tv_label"
                style="@style/style_text_lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView"
                android:text="@string/good_lable10" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layout_goodinfo_shop"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/layout_margin"
            android:background="@drawable/bg_msgcenter_item"
            android:paddingBottom="10dp"
            android:paddingLeft="@dimen/layout_margin"
            android:paddingRight="@dimen/layout_margin"
            android:paddingTop="10dp">

            <!--<ImageView
                android:id="@+id/iv_arrow1"
                android:layout_width="@dimen/width_arrow"
                android:layout_height="@dimen/hight_arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/img_disclosure_arrow" />-->

            <!--<RelativeLayout
                android:id="@+id/layout_goodinfo_tip4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/iv_arrow1">

                <ImageView
                    android:id="@+id/iv_shopinfo_2"
                    android:layout_width="20dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/store" />

                <TextView
                    style="@style/style_text_lable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/iv_shopinfo_2"
                    android:text="XXXXX旗舰店" />
            </RelativeLayout>-->

            <TextView
                android:id="@+id/tv_goods_store_name"
                style="@style/style_text_lable"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:drawableLeft="@mipmap/store"
                android:drawableRight="@mipmap/img_disclosure_arrow"
                android:text="店铺" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="@dimen/layout_margin"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/iv_arrow1"
                    android:layout_weight="1.0">

                    <TextView
                        style="@style/style_text_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/good_lable11" />

                    <TextView
                        android:id="@+id/tv_goodinfo_desccredit"
                        style="@style/style_text_content_red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/content_margin"
                        android:text="0" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/iv_arrow1"
                    android:layout_weight="1.0"
                    android:gravity="center_horizontal">

                    <TextView
                        style="@style/style_text_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/good_lable12" />

                    <TextView
                        android:id="@+id/tv_goodinfo_servicecredit"
                        style="@style/style_text_content_red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/content_margin"
                        android:text="0" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/iv_arrow1"
                    android:layout_weight="1.0"
                    android:gravity="right">

                    <TextView
                        style="@style/style_text_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/good_lable13" />

                    <TextView
                        android:id="@+id/tv_goodinfo_deliverycredit"
                        style="@style/style_text_content_red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/content_margin"
                        android:text="0" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            style="@style/style_text_lable"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="@string/shop_lable14"
            android:textColor="@color/color_bf"
            android:textSize="@dimen/dimen_15"
            />

        <com.help.reward.view.MyGridView
            android:id="@+id/gv_shopinfo_recommand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:horizontalSpacing="@dimen/layout_margin"
            android:numColumns="2" />

    </LinearLayout>
</ScrollView>