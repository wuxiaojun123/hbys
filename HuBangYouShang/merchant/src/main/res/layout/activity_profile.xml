<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_allbg">

    <include
        layout="@layout/layout_title"></include>


    <RelativeLayout
        android:id="@+id/rl_choose_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10"
        android:background="@color/color_while"
        android:paddingTop="@dimen/dimen_5"
        android:paddingBottom="@dimen/dimen_5"
        android:paddingRight="@dimen/dimen_10"
        android:paddingLeft="@dimen/dimen_10">


        <ImageView
            android:id="@+id/iv_photo_arrow"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/img_disclosure_arrow"/>

        <com.reward.help.merchant.view.CircularImage
            android:id="@+id/iv_profile_photo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_toLeftOf="@+id/iv_photo_arrow"
            android:layout_marginRight="@dimen/dimen_10"
            android:background="@mipmap/img_my_default_photo"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_photo"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_10"
            android:textSize="@dimen/dimen_18"
            android:textColor="@color/color_3a"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10"
        android:background="@color/color_while"
        android:padding="@dimen/dimen_13">

        <TextView
            android:paddingTop="@dimen/dimen_5"
            android:paddingBottom="@dimen/dimen_5"
            android:id="@+id/tv_profile_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_nick_name"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_10"
            android:textSize="@dimen/dimen_18"
            android:textColor="@color/color_3a"/>

        <EditText
            android:id="@+id/et_edit_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_10"
            android:layout_toRightOf="@+id/tv_profile_nickname"
            android:layout_marginLeft="@dimen/dimen_10"
            android:gravity="right"
            android:background="@null"
            android:text=""
            android:textSize="@dimen/dimen_18"
            android:layout_centerVertical="true"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10"
        android:background="@color/color_while"
        android:padding="@dimen/dimen_13">

        <TextView
            android:paddingTop="@dimen/dimen_5"
            android:paddingBottom="@dimen/dimen_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_name"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_10"
            android:textSize="@dimen/dimen_18"
            android:textColor="@color/color_3a"/>

        <TextView
            android:id="@+id/tv_profile_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_10"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:background="@null"
            android:text=""
            android:textSize="@dimen/dimen_18"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/dimen_13"
        android:background="@drawable/shape_divider_line"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_while"
        android:padding="@dimen/dimen_13">

        <TextView
            android:paddingTop="@dimen/dimen_5"
            android:paddingBottom="@dimen/dimen_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_sex"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_10"
            android:textSize="@dimen/dimen_18"
            android:textColor="@color/color_3a"/>

        <TextView
            android:id="@+id/tv_profile_sex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_10"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:background="@null"
            android:text=""
            android:textSize="@dimen/dimen_18"
            android:layout_centerVertical="true"/>
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/dimen_13"
        android:background="@drawable/shape_divider_line"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_while"
        android:padding="@dimen/dimen_13">

        <TextView
            android:paddingTop="@dimen/dimen_5"
            android:paddingBottom="@dimen/dimen_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_cellphone"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_10"
            android:textSize="@dimen/dimen_18"
            android:textColor="@color/color_3a"/>

        <TextView
            android:id="@+id/tv_profile_cellphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_10"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:background="@null"
            android:text=""
            android:textSize="@dimen/dimen_18"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

</LinearLayout>