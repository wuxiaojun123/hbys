<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_allbg"
    android:orientation="vertical">

    <include layout="@layout/layout_title"></include>

    <RelativeLayout
        android:id="@+id/rl_my_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10"
        android:background="@color/color_while"
        android:padding="@dimen/dimen_13">


        <com.reward.help.merchant.view.CircularImage
            android:id="@+id/iv_my_photo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@mipmap/img_my_default_photo" />

        <ImageView
            android:id="@+id/iv_my_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/img_disclosure_arrow" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_15"
            android:layout_toLeftOf="@+id/iv_my_arrow"
            android:layout_toRightOf="@+id/iv_my_photo"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_usrname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/color_3a"
                android:textSize="@dimen/dimen_15" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mine_info_tip"
                android:textColor="@color/color_84"
                android:textSize="@dimen/dimen_12" />

        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_my_store_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10"
        android:background="@color/color_while"
        android:padding="@dimen/dimen_13">


        <com.reward.help.merchant.view.CircularImage
            android:id="@+id/iv_store_photo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@mipmap/img_my_default_photo" />

        <ImageView
            android:id="@+id/iv_store_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/img_disclosure_arrow" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_15"
            android:layout_toLeftOf="@+id/iv_store_arrow"
            android:layout_toRightOf="@+id/iv_store_photo"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mine_store_info"
                android:textColor="@color/color_3a"
                android:textSize="@dimen/dimen_15" />

            <TextView
                android:id="@+id/tv_store_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mine_store_info_tip"
                android:textColor="@color/color_84"
                android:textSize="@dimen/dimen_12" />

        </LinearLayout>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10"
        android:background="@color/color_while"
        android:divider="@drawable/shape_divider_line"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:showDividers="middle">

        <TextView
            android:id="@+id/tv_mine_modify_password"
            style="@style/style_my_account_text_item"
            android:text="@string/mine_modify_password" />

        <TextView
            android:id="@+id/tv_mine_clear_cache"
            style="@style/style_my_account_text_item"
            android:text="@string/mine_clear_cache" />

        <TextView
            android:id="@+id/tv_mine_customer_center"
            style="@style/style_my_account_text_item"
            android:text="@string/mine_customer_center" />

        <TextView
            android:id="@+id/tv_mine_feek_back"
            style="@style/style_my_account_text_item"
            android:text="@string/mine_feek_back" />

        <TextView
            android:id="@+id/tv_mine_about_us"
            style="@style/style_my_account_text_item"
            android:text="@string/mine_about_us" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_mine_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/color_while"
        android:paddingLeft="10dp">

        <TextView
            style="@style/style_mine_logout"
            android:text="@string/mine_logout" />
    </RelativeLayout>

</LinearLayout>