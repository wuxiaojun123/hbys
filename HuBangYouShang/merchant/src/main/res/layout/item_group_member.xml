<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_10">
        <ImageView
            android:id="@+id/iv_groupmember_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/coupon_xuan_b"/>

        <ImageView
            android:id="@+id/iv_member_avatar"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_toRightOf="@+id/iv_groupmember_select"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_centerVertical="true"
            android:src="@drawable/ease_default_avatar"/>

        <TextView
            android:id="@+id/tv_groupmember_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/dimen_14"
            android:layout_toRightOf="@+id/iv_member_avatar"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/color_3a"/>
    </RelativeLayout>

</RelativeLayout>